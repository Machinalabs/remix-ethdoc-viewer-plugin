{
  "name": "remix-viewer-plugin",
  "version": "0.1.0",
  "description": "A plugin that spawn a main panel plugin which can receive data",
  "author": "MachinaLabs",
  "private": true,
  "dependencies": {
    "@remixproject/plugin": "^0.1.9",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "formik": "^2.1.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.1",
    "typescript": "~3.7.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "CI=true react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "test:ci": "CI=true react-scripts test",
    "tslint": "tslint -c tslint.json src/**/*.{ts,tsx} --fix --format verbose",
    "check-formatting": "prettier --write --list-different './src/**/*.tsx'",
    "deploy": "yarn build && surge --project ./build --domain machinalabs-remix-viewer-plugin-v2.surge.sh"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/react-router-dom": "^5.1.5",
    "coveralls": "^3.1.0",
    "husky": "^4.2.5",
    "prettier": "^2.0.5",
    "surge": "^0.21.3",
    "tslint": "^6.1.2",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "tslint-react": "^5.0.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn tslint && yarn check-formatting"
    }
  }
}